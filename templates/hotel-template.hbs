<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{hotel_name}} - Luxury Hotel | SuitedStay</title>
    <meta name="description" content="{{description}}">
    
    <!-- Schema Markup for SEO -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": ["Hotel", "LodgingBusiness"],
        "name": "{{hotel_name}}",
        "description": "{{description}}",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "{{address}}",
            "addressLocality": "{{neighbourhood}}"
        },
        {{#if phone_formatted}}
        "telephone": "{{phone_formatted}}",
        {{/if}}
        {{#if website}}
        "url": "{{website}}",
        {{/if}}
        {{#if hero_photo_url}}
        "image": "{{hero_photo_url}}",
        {{/if}}
        "checkinTime": "{{check_in}}",
        "checkoutTime": "{{check_out}}",
        {{#if price_range}}
        "priceRange": "{{price_range}}",
        {{/if}}
        "amenityFeature": [
            {{#each amenities}}
            {
                "@type": "LocationFeatureSpecification",
                "name": "{{this}}"
            }{{#unless @last}},{{/unless}}
            {{/each}}
        ]
        {{#if faqs}}
        ,
        "mainEntity": [
            {{#each faqs}}
            {
                "@type": "Question",
                "name": "{{question}}",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "{{answer}}"
                }
            }{{#unless @last}},{{/unless}}
            {{/each}}
        ]
        {{/if}}
    }
    </script>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .text-gold { color: #c5a46d; }
        .bg-gold { background-color: #c5a46d; }
        .border-gold { border-color: #c5a46d; }
    </style>
</head>
<body class="bg-white font-sans text-sm leading-relaxed text-gray-700">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/" class="text-xl font-bold text-gray-900">
                    Suited<span class="text-gold">Stay</span>
                </a>
                <div class="flex items-center space-x-4">
                    <a href="/claim" class="bg-gray-900 text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-800 transition-colors">
                        List Your Property
                    </a>
                    <a href="/login" class="text-gray-600 hover:text-gray-900 text-sm">Login</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-6 py-8">
        <!-- Badges -->
        <div class="flex items-center gap-4 mb-4 flex-wrap">
            {{#if claimed_status}}
            <div class="bg-emerald-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                ‚úì Premium Listing
            </div>
            {{/if}}
            <div class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-medium flex items-center">
                <span class="w-2 h-2 bg-gold rounded-full mr-2"></span>
                Ultra-Luxury
            </div>
            <div class="bg-emerald-100 text-emerald-800 px-3 py-1 rounded-full text-sm font-medium flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
                Exceptional Experience
            </div>
        </div>

        <!-- Hotel Header with Score -->
        <div class="flex items-start justify-between mb-6">
            <div class="flex-1 pr-4">
                <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-2 leading-tight">{{hotel_name}}</h1>
                <p class="text-gray-600 mb-3">{{address}}</p>
                
                <div class="flex items-center space-x-4 mb-4 flex-wrap">
                    <div class="flex items-center">
                        <div class="flex text-yellow-400 text-base">
                            {{#if star_rating_icons}}
                            {{#each star_rating_icons}}
                            <span>{{this}}</span>
                            {{/each}}
                            {{/if}}
                        </div>
                        <span class="ml-2 text-sm text-gray-600">{{star_rating_text}}</span>
                    </div>
                    <div class="text-sm font-semibold text-gray-900">{{price_indicator}}</div>
                </div>

                <div class="flex flex-wrap items-center gap-3">
                    <button id="shareBtn" onclick="shareLink()" class="flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                        </svg>
                        <span id="shareText">Share Link</span>
                    </button>
                    {{#if phone_url}}
                    <a href="{{phone_url}}" class="flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        Call
                    </a>
                    {{/if}}
                    <a href="#" class="flex items-center px-4 py-2 bg-gray-900 text-white rounded-lg text-sm font-medium hover:bg-gray-800 transition-colors">
                        Go
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                    </a>
                    {{#if book_link}}
                    <a href="{{book_link}}" target="_blank" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors">
                        Book {{price_range}}
                    </a>
                    {{/if}}
                </div>
            </div>
            
            <!-- Score Badge -->
            <div class="bg-emerald-500 text-white text-2xl font-bold w-16 h-16 rounded-2xl flex items-center justify-center flex-shrink-0">
                {{overall_score}}
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="border-t border-b border-gray-200 mb-8">
            <nav class="flex space-x-8 overflow-x-auto">
                <a href="#rating" class="nav-tab py-3 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm whitespace-nowrap cursor-pointer" onclick="scrollToSection('rating', this)">Rating</a>
                <a href="#details" class="nav-tab py-3 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm whitespace-nowrap cursor-pointer" onclick="scrollToSection('details', this)">Details</a>
                <a href="#location" class="nav-tab py-3 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm whitespace-nowrap cursor-pointer" onclick="scrollToSection('location', this)">Location</a>
                <a href="#faqs" class="nav-tab py-3 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 font-medium text-sm whitespace-nowrap cursor-pointer" onclick="scrollToSection('faqs', this)">FAQs</a>
            </nav>
        </div>

        <!-- Hero Image -->
        {{#if hero_photo_url}}
        <div class="mb-8 -mx-6 lg:-mx-8">
            <img src="{{hero_photo_url}}" alt="{{hotel_name}}" class="w-full h-64 md:h-80 lg:h-96 object-cover rounded-lg" />
        </div>
        {{/if}}

        <!-- About Section -->
        <section id="details" class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 pb-2 border-b-2 border-gold inline-block">About</h2>
            <div class="text-base leading-relaxed text-gray-700 mb-6">
                {{description}}
            </div>
        </section>

        <!-- Rating Section -->
        <section id="rating" class="mb-8">
            <div class="bg-gray-50 rounded-xl border border-gray-200 p-8">
                <div class="flex items-center mb-6">
                    <div class="bg-gold text-white w-20 h-20 rounded-xl flex items-center justify-center mr-6">
                        <span class="text-2xl font-bold">{{overall_score}}</span>
                    </div>
                    <div class="flex-1">
                        <div class="bg-gray-900 text-white px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center gap-1 mb-2">
                            ‚úì SuitedStay Verified
                        </div>
                        <div class="text-xl font-bold text-gray-900">{{overall_score}}/10</div>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            We use a proprietary 10-point scoring system to evaluate the best luxury hotels and experiences.
                            Scoring is carefully evaluated based on guest reviews, expert assessments, and luxury standards.
                        </p>
                    </div>
                </div>
                
                <div class="space-y-0 divide-y divide-gray-200">
                    <div class="flex items-center justify-between py-3">
                        <div class="flex items-center">
                            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-3 text-xs">üè®</div>
                            <span class="font-medium text-gray-900">Accommodation Quality</span>
                        </div>
                        <div class="bg-emerald-500 text-white px-3 py-1 rounded-full text-sm font-bold">{{accommodation_quality_score}}</div>
                    </div>
                    
                    <div class="flex items-center justify-between py-3">
                        <div class="flex items-center">
                            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-3 text-xs">üçΩÔ∏è</div>
                            <span class="font-medium text-gray-900">Dining & Amenities</span>
                        </div>
                        <div class="bg-emerald-500 text-white px-3 py-1 rounded-full text-sm font-bold">{{dining_amenities_score}}</div>
                    </div>
                    
                    <div class="flex items-center justify-between py-3">
                        <div class="flex items-center">
                            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-3 text-xs">‚ú®</div>
                            <span class="font-medium text-gray-900">Ambience & Design</span>
                        </div>
                        <div class="bg-emerald-500 text-white px-3 py-1 rounded-full text-sm font-bold">{{ambience_design_score}}</div>
                    </div>
                    
                    <div class="flex items-center justify-between py-3">
                        <div class="flex items-center">
                            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-3 text-xs">üíé</div>
                            <span class="font-medium text-gray-900">Value & Service</span>
                        </div>
                        <div class="bg-emerald-500 text-white px-3 py-1 rounded-full text-sm font-bold">{{value_service_score}}</div>
                    </div>
                    
                    <div class="flex items-center justify-between py-3">
                        <div class="flex items-center">
                            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center mr-3 text-xs">üìç</div>
                            <span class="font-medium text-gray-900">Location & Accessibility</span>
                        </div>
                        <div class="bg-emerald-500 text-white px-3 py-1 rounded-full text-sm font-bold">{{location_accessibility_score}}</div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Review Sentiment & Best Times -->
        {{#if public_review_sentiment}}
        <section class="mb-8">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
                <div class="font-semibold text-blue-900 mb-2">Public Review Sentiment</div>
                <div class="text-sm text-blue-800 mb-2">
                    <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Based on {{reviews_count}} Google Reviews
                </div>
                <p class="text-blue-800 leading-relaxed">{{public_review_sentiment}}</p>
                <p class="text-xs text-blue-600 mt-2">Last Updated 1 Aug 2025</p>
            </div>

            {{#if best_times_to_stay}}
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                <div class="font-semibold text-yellow-900 mb-2">Best Times to Stay at {{hotel_name}}</div>
                <p class="text-yellow-800 mb-3 leading-relaxed">{{best_times_to_stay}}</p>
                <div class="flex flex-wrap gap-4">
                    <div class="flex items-center">
                        <div class="w-3 h-3 bg-red-400 rounded-full mr-2"></div>
                        <span class="text-sm text-yellow-700 font-medium mr-2">Buzzing</span>
                        <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs">December - January</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 bg-emerald-400 rounded-full mr-2"></div>
                        <span class="text-sm text-yellow-700 font-medium mr-2">Relaxed</span>
                        <span class="bg-emerald-100 text-emerald-800 px-2 py-1 rounded text-xs">May - September</span>
                    </div>
                </div>
            </div>
            {{/if}}
        </section>
        {{/if}}

        <!-- Amenities -->
        {{#if amenities}}
        <section class="mb-8">
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                <h3 class="flex items-center text-lg font-semibold text-gray-900 mb-4">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    Amenities
                </h3>
                <div class="flex flex-wrap gap-2">
                    {{#each amenities}}
                    <span class="bg-gray-100 text-gray-700 px-3 py-2 rounded-full text-sm font-medium">{{this}}</span>
                    {{/each}}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                    <div class="flex items-center mb-3">
                        <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h4 class="font-semibold text-gray-900">Check-in Time</h4>
                    </div>
                    <p class="text-gray-700 text-base">{{check_in}}</p>
                </div>

                <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                    <div class="flex items-center mb-3">
                        <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h4 class="font-semibold text-gray-900">Check-out Time</h4>
                    </div>
                    <p class="text-gray-700 text-base">{{check_out}}</p>
                </div>

                <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                    <div class="flex items-center mb-3">
                        <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                        <h4 class="font-semibold text-gray-900">Price per Night</h4>
                    </div>
                    <p class="text-gray-700 text-base">{{price_range}}</p>
                </div>
            </div>
        </section>
        {{/if}}

        <!-- Location Section -->
        <section id="location" class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 pb-2 border-b-2 border-gold inline-block">Location</h2>
            
            {{#if address_google_maps_link}}
            <div class="relative mb-6 rounded-xl overflow-hidden">
                <iframe 
                    src="https://maps.google.com/maps?q={{latitude}},{{longitude}}&hl=en&z=15&output=embed" 
                    class="w-full h-48 border-0"
                    allowfullscreen 
                    loading="lazy">
                </iframe>
                <a href="{{address_google_maps_link}}" target="_blank" class="absolute top-3 left-3 bg-white text-blue-600 px-3 py-2 rounded-lg text-sm font-medium shadow-lg hover:bg-gray-50 transition-colors">
                    View larger map
                </a>
            </div>
            {{/if}}

            <div class="space-y-0 divide-y divide-gray-100">
                <div class="flex justify-between items-center py-4">
                    <div>
                        <div class="font-semibold text-gray-900 text-sm mb-1">Neighborhood</div>
                        <div class="text-gray-600 text-sm">{{neighbourhood}}</div>
                    </div>
                </div>

                <div class="flex justify-between items-center py-4">
                    <div>
                        <div class="font-semibold text-gray-900 text-sm mb-1">Address</div>
                        <div class="text-gray-600 text-sm">{{address}}</div>
                    </div>
                    {{#if directions_url}}
                    <a href="{{directions_url}}" target="_blank" class="bg-gray-100 text-gray-700 px-3 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors flex items-center">
                        Get Directions
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                    </a>
                    {{/if}}
                </div>

                {{#if website}}
                <div class="flex justify-between items-center py-4">
                    <div>
                        <div class="font-semibold text-gray-900 text-sm mb-1">Website</div>
                        <div class="text-gray-600 text-sm">{{website}}</div>
                    </div>
                    {{#if book_link}}
                    <a href="{{book_link}}" target="_blank" class="bg-blue-600 text-white px-3 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors flex items-center">
                        Visit Website
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                    </a>
                    {{/if}}
                </div>
                {{/if}}

                {{#if phone_formatted}}
                <div class="flex justify-between items-center py-4">
                    <div>
                        <div class="font-semibold text-gray-900 text-sm mb-1">Phone</div>
                        <div class="text-gray-600 text-sm">{{phone_formatted}}</div>
                    </div>
                    {{#if phone_url}}
                    <a href="{{phone_url}}" class="bg-gray-100 text-gray-700 px-3 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors flex items-center">
                        Call
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                    </a>
                    {{/if}}
                </div>
                {{/if}}

                {{#if getting_there}}
                <div class="py-4">
                    <div class="font-semibold text-gray-900 text-sm mb-2">Getting There</div>
                    <div class="text-gray-600 text-sm leading-relaxed">{{getting_there}}</div>
                </div>
                {{/if}}
            </div>
        </section>

        <!-- FAQs Section -->
        {{#if faqs}}
        <section id="faqs" class="mb-8" itemscope itemtype="https://schema.org/FAQPage">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 pb-2 border-b-2 border-gold inline-block">Frequently Asked Questions</h2>
            <div class="space-y-4">
                {{#each faqs}}
                <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
                    <h3 class="text-lg font-semibold text-blue-600 mb-3" itemprop="name">{{question}}</h3>
                    <div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
                        <p class="text-gray-700 leading-relaxed" itemprop="text">{{answer}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
        {{/if}}
    </div>

    <script>
        function shareLink() {
            const pageUrl = '{{page_url}}' || window.location.href;
            const shareBtn = document.getElementById('shareBtn');
            const shareText = document.getElementById('shareText');
            
            navigator.clipboard.writeText(pageUrl).then(function() {
                shareText.textContent = 'Copied';
                shareBtn.classList.add('bg-emerald-50', 'border-emerald-300', 'text-emerald-700');
                shareBtn.classList.remove('bg-white', 'border-gray-300', 'text-gray-700');
                
                setTimeout(function() {
                    shareText.textContent = 'Share Link';
                    shareBtn.classList.remove('bg-emerald-50', 'border-emerald-300', 'text-emerald-700');
                    shareBtn.classList.add('bg-white', 'border-gray-300', 'text-gray-700');
                }, 2000);
            }).catch(function() {
                const textArea = document.createElement('textarea');
                textArea.value = pageUrl;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                shareText.textContent = 'Copied';
                shareBtn.classList.add('bg-emerald-50', 'border-emerald-300', 'text-emerald-700');
                shareBtn.classList.remove('bg-white', 'border-gray-300', 'text-gray-700');
                
                setTimeout(function() {
                    shareText.textContent = 'Share Link';
                    shareBtn.classList.remove('bg-emerald-50', 'border-emerald-300', 'text-emerald-700');
                    shareBtn.classList.add('bg-white', 'border-gray-300', 'text-gray-700');
                }, 2000);
            });
        }

        function scrollToSection(sectionId, tab) {
            const element = document.getElementById(sectionId);
            if (element) {
                element.scrollIntoView({ 
                    behavior: 'smooth',
                    block: 'start'
                });
                
                document.querySelectorAll('.nav-tab').forEach(t => {
                    t.classList.remove('text-gray-900', 'border-gold');
                    t.classList.add('text-gray-500', 'border-transparent');
                });
                
                tab.classList.remove('text-gray-500', 'border-transparent');
                tab.classList.add('text-gray-900', 'border-gold');
            }
        }

        // Initialize first tab as active
        document.addEventListener('DOMContentLoaded', function() {
            const firstTab = document.querySelector('.nav-tab');
            if (firstTab) {
                firstTab.classList.remove('text-gray-500', 'border-transparent');
                firstTab.classList.add('text-gray-900', 'border-gold');
            }
        });

        // Handle scroll-based navigation highlighting
        window.addEventListener('scroll', function() {
            const sections = ['rating', 'details', 'location', 'faqs'];
            const navTabs = document.querySelectorAll('.nav-tab');
            
            let currentSection = '';
            
            sections.forEach(sectionId => {
                const element = document.getElementById(sectionId);
                if (element) {
                    const rect = element.getBoundingClientRect();
                    if (rect.top <= 100 && rect.bottom >= 100) {
                        currentSection = sectionId;
                    }
                }
            });
            
            navTabs.forEach((tab, index) => {
                tab.classList.remove('text-gray-900', 'border-gold');
                tab.classList.add('text-gray-500', 'border-transparent');
                
                if (sections[index] === currentSection) {
                    tab.classList.remove('text-gray-500', 'border-transparent');
                    tab.classList.add('text-gray-900', 'border-gold');
                }
            });
        });
    </script>
