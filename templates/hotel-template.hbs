            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: #f9fafb;
            border-radius: 0.75rem;
            border: 1px solid #e5e7eb;
        }
        
        .score-circle {
            background: #10b981;
            color: white;
            width: 80px;
            height: 80px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: bold;
        }
        
        .score-info {
            flex: 1;
        }
        
        .score-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #111827;
            margin-bottom: 0.5rem;
        }
        
        .score-subtitle {
            color: #6b7280;
            font-size: 0.875rem;
            line-height: 1.4;
        }
        
        .verified-badge {
            background: #111827;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            margin-bottom: 0.5rem;
        }
        
        .score-breakdown {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 1.5rem;
        }
        
        .score-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid #e9ecef;
        }
        
        .score-item:last-child {
            border-bottom: none;
        }
        
        .score-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #374151;
            font-weight: 500;
        }
        
        .score-icon {
            width: 1.5rem;
            height: 1.5rem;
            background: #f3f4f6;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
        }
        
        .score-value {
            background: #10b981;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-weight: bold;
            font-size: 0.875rem;
            min-width: 3rem;
            text-align: center;
        }
        
        /* Content Sections */
        .content-section {
            margin: 1.5rem 0;
            padding: 1rem 0;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .content-section:last-child {
            border-bottom: none;
        }
        
        .section-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #111827;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .info-card {
            background: #f9fafb;
            padding: 1.5rem;
            border-radius: 0.75rem;
            border: 1px solid #e5e7eb;
            margin-bottom: 1rem;
        }
        
        .info-card h3 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
        }
        
        .tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }
        
        .tag {
            background: #e0e7ff;
            color: #3730a3;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        /* Location Section */
        .location-grid {
            display: grid;
            gap: 1rem;
        }
        
        .location-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem;
            background: #f9fafb;
            border-radius: 0.5rem;
            border: 1px solid #e5e7eb;
        }
        
        .location-label {
            font-weight: 600;
            color: #111827;
            font-size: 0.875rem;
        }
        
        .location-value {
            color: #6b7280;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        
        .location-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: white;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            color: #374151;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.2s;
        }
        
        .location-button:hover {
            background: #f9fafb;
            border-color: #9ca3af;
        }
        
        .location-button.primary {
            background: #10b981;
            color: white;
            border-color: #10b981;
        }
        
        .location-button.primary:hover {
            background: #059669;
            border-color: #059669;
        }
        
        /* FAQ Section */
        .faq-item {
            border-bottom: 1px solid #e5e7eb;
            padding: 1rem 0;
        }
        
        .faq-item:last-child {
            border-bottom: none;
        }
        
        .faq-question {
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.5rem;
        }
        
        .faq-answer {
            color: #6b7280;
            line-height: 1.6;
        }
        
        /* Toast Notification */
        .toast {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            background: #111827;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            opacity: 0;
            transform: translateY(1rem);
            transition: all 0.3s ease;
            z-index: 1000;
        }
        
        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 0 1rem;
            }
            
            .main-content {
                padding: 1rem 0;
            }
            
            .title {
                font-size: 1.5rem;
            }
            
            .score-section {
                flex-direction: column;
                text-align: center;
            }
            
            .hotel-header {
                flex-direction: column;
            }
            
            .action-buttons {
                justify-content: center;
            }
            
            .nav-tabs {
                gap: 1rem;
            }
        }
    </style>
</head>
