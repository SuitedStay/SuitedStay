<div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow cursor-pointer">
  <!-- Hotel Image -->
  <div class="relative">
    {{#if hotel.hero_photo_url}}
    <img src="{{hotel.hero_photo_url}}" alt="{{hotel.hotel_name}}" class="w-full h-48 object-cover">
    {{else}}
    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
      <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
    </div>
    {{/if}}
    
    <!-- Score Badge -->
    {{#if hotel.overall_score}}
    <div class="absolute top-3 right-3">
      <span class="score-pill">{{hotel.overall_score}}</span>
    </div>
    {{/if}}
    
    <!-- Award Badges -->
    {{#if hotel.tags}}
    <div class="absolute top-3 left-3 flex flex-col gap-1">
      {{#each hotel.tags}}
      {{#if (eq this "Ultra-Luxury")}}
      <span class="bg-yellow-500 text-white text-xs px-2 py-1 rounded-full font-medium">Ultra-Luxury</span>
      {{/if}}
      {{#if (eq this "Exceptional Experience")}}
      <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full font-medium">
        <svg class="w-3 h-3 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
        </svg>
        Best
      </span>
      {{/if}}
      {{/each}}
    </div>
    {{/if}}
  </div>

  <!-- Hotel Info -->
  <div class="p-4">
    <!-- Hotel Name & Location -->
    <div class="mb-3">
      <h3 class="text-lg font-semibold text-gray-900 mb-1 line-clamp-2">{{hotel.hotel_name}}</h3>
      {{#if hotel.address}}
      <p class="text-sm text-gray-600">{{hotel.address}}</p>
      {{/if}}
    </div>

    <!-- Rating & Price Row -->
    <div class="flex justify-between items-center mb-3">
      {{#if hotel.star_rating_icons}}
      <div class="flex items-center gap-1">
        <span class="text-yellow-400 text-sm">{{hotel.star_rating_icons}}</span>
        {{#if hotel.star_rating_text}}
        <span class="text-xs text-gray-500">{{hotel.star_rating_text}}</span>
        {{/if}}
      </div>
      {{/if}}
      
      {{#if hotel.price_indicator}}
      <span class="price-indicator text-sm">{{hotel.price_indicator}}</span>
      {{/if}}
    </div>

    <!-- Scores Grid -->
    {{#if hotel.accommodation_quality_score}}
    <div class="grid grid-cols-5 gap-1 mb-3">
      <div class="text-center">
        <div class="text-xs text-gray-500 mb-1">Accommodation</div>
        <div class="w-6 h-6 bg-green-500 text-white text-xs rounded flex items-center justify-center mx-auto">
          {{hotel.accommodation_quality_score}}
        </div>
      </div>
      {{#if hotel.dining_amenities_score}}
      <div class="text-center">
        <div class="text-xs text-gray-500 mb-1">Dining</div>
        <div class="w-6 h-6 bg-green-500 text-white text-xs rounded flex items-center justify-center mx-auto">
          {{hotel.dining_amenities_score}}
        </div>
      </div>
      {{/if}}
      {{#if hotel.ambience_design_score}}
      <div class="text-center">
        <div class="text-xs text-gray-500 mb-1">Design</div>
        <div class="w-6 h-6 bg-green-500 text-white text-xs rounded flex items-center justify-center mx-auto">
          {{hotel.ambience_design_score}}
        </div>
      </div>
      {{/if}}
      {{#if hotel.value_service_score}}
      <div class="text-center">
        <div class="text-xs text-gray-500 mb-1">Service</div>
        <div class="w-6 h-6 bg-green-500 text-white text-xs rounded flex items-center justify-center mx-auto">
          {{hotel.value_service_score}}
        </div>
      </div>
      {{/if}}
      {{#if hotel.location_accessibility_score}}
      <div class="text-center">
        <div class="text-xs text-gray-500 mb-1">Location</div>
        <div class="w-6 h-6 bg-green-500 text-white text-xs rounded flex items-center justify-center mx-auto">
          {{hotel.location_accessibility_score}}
        </div>
      </div>
      {{/if}}
    </div>
    {{/if}}

    <!-- Tags (simplified without helpers) -->
    {{#if hotel.tags}}
    <div class="flex flex-wrap gap-1">
      {{#each hotel.tags}}
      {{#if @first}}
      <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">{{this}}</span>
      {{/if}}
      {{#if @second}}
      <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">{{this}}</span>
      {{/if}}
      {{#if @third}}
      <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">{{this}}</span>
      {{/if}}
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>